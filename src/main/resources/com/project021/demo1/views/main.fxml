<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.project021.demo1.controller.MainController"
      spacing="15" prefWidth="800" prefHeight="600" alignment="TOP_CENTER"
      style="-fx-background-color: #2A2D37; -fx-font-family: 'Roboto', 'Arial';">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Crypto App" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"
                style="-fx-background-color: #D9534F; -fx-text-fill: #FFFFFF; -fx-font-size: 14px;
                       -fx-padding: 10 20 10 20; -fx-background-radius: 5;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Input Text:" style="-fx-font-size: 16px; -fx-text-fill: #FFFFFF; -fx-padding: 0 0 5 0;"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextArea fx:id="inputTextArea" promptText="Enter text to encrypt/decrypt" prefHeight="150" HBox.hgrow="ALWAYS"
                  style="-fx-background-color: #3B4048; -fx-text-fill: #333333; -fx-prompt-text-fill: #A0A0A0;
                         -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>
        <Button fx:id="copyInputButton" text="Copy" onAction="#handleCopyInput"
                style="-fx-background-color: #4A90E2; -fx-text-fill: #FFFFFF; -fx-font-size: 14px;
                       -fx-padding: 10 20 10 20; -fx-background-radius: 5;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Select Algorithm:" style="-fx-font-size: 16px; -fx-text-fill: #FFFFFF; -fx-padding: 0 0 5 0;"/>
        <ComboBox fx:id="algorithmComboBox" prefWidth="150"
                  style="-fx-background-color: #3B4048; -fx-text-fill: #E0E0E0; -fx-font-size: 14px;
                         -fx-background-radius: 5; -fx-selection-bar: #4A90E2;"/>
    </HBox>

    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="encryptButton" text="Encrypt" onAction="#handleEncrypt"
                style="-fx-background-color: #4A90E2; -fx-text-fill: #FFFFFF; -fx-font-size: 14px;
                       -fx-padding: 10 20 10 20; -fx-background-radius: 5;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>
        <Button fx:id="decryptButton" text="Decrypt" onAction="#handleDecrypt"
                style="-fx-background-color: #4A90E2; -fx-text-fill: #FFFFFF; -fx-font-size: 14px;
                       -fx-padding: 10 20 10 20; -fx-background-radius: 5;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Result:" style="-fx-font-size: 16px; -fx-text-fill: #FFFFFF; -fx-padding: 0 0 5 0;"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextArea fx:id="outputTextArea" editable="false" prefHeight="150" HBox.hgrow="ALWAYS"
                  style="-fx-background-color: #3B4048; -fx-text-fill: #333333; -fx-prompt-text-fill: #A0A0A0;
                         -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>
        <Button fx:id="copyOutputButton" text="Copy" onAction="#handleCopyOutput"
                style="-fx-background-color: #4A90E2; -fx-text-fill: #FFFFFF; -fx-font-size: 14px;
                       -fx-padding: 10 20 10 20; -fx-background-radius: 5;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>
    </HBox>
</VBox>
