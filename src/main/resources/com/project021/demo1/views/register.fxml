<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.project021.demo1.controller.RegisterController"
      spacing="15" alignment="CENTER" prefWidth="300" prefHeight="400"
      style="-fx-background-color: #2A2D37; -fx-font-family: 'Roboto', 'Arial';">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Registration" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;"/>

    <TextField fx:id="usernameField" promptText="Username"
               style="-fx-background-color: #3B4048; -fx-text-fill: #E0E0E0; -fx-prompt-text-fill: #A0A0A0;
                      -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>

    <PasswordField fx:id="passwordField" promptText="Password"
                   style="-fx-background-color: #3B4048; -fx-text-fill: #E0E0E0; -fx-prompt-text-fill: #A0A0A0;
                          -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>

    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"
                   style="-fx-background-color: #3B4048; -fx-text-fill: #E0E0E0; -fx-prompt-text-fill: #A0A0A0;
                          -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>

    <Button fx:id="registerButton" text="Register" onAction="#handleRegister"
            style="-fx-background-color: #4A90E2; -fx-text-fill: #FFFFFF; -fx-font-size: 14px;
                   -fx-padding: 10 20 10 20; -fx-background-radius: 5;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>

</VBox>